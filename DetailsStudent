#include <iostream>
using namespace std;
class Student {
	private:
		int roll;
        char name[25];
    public:
        void getdata()
       	{
                cout<<"\n Enter Roll No. : ";
                cin>>roll;
                cout<<"\n Enter Student Name : ";
                cin>>name;
        }
        void putdata()
        {
                cout<<"\n Student Marklist ";
                cout<<"\n Roll No. :  "<<roll;
                cout<<"\n Student Name :  "<<name<<endl;
        }
};
class StudentExam : public Student     
{
    public:
        int sub1, sub2, sub3;
        float per;
    public:
        void accept_data()
        {
                getdata();
                cout<<"\n Enter Marks for Subject 1 : ";
                cin>>sub1;
                cout<<"\n Enter Marks for Subject 2 : ";
                cin>>sub2;
                cout<<"\n Enter Marks for Subject 3 : ";
                cin>>sub3;
                
        }
        void display_data() 
            {    putdata();
                cout<<"\n Marks of Subject 1 :  "<<sub1;
                cout<<"\n Marks of Subject 2 :  "<<sub2;
                cout<<"\n Marks of Subject 3 :  "<<sub3; }
};
class StudentResult : public StudentExam      
{
    public:
        void calculate ()
        {
                per = (sub1+sub2+sub3)/3;
                cout<<"\n\n Total Percentage :  "<<per<<endl;
                cout<<"................************....................";
        }
};
int main()
{
        StudentResult S;     
        int C, i;
        cout<<"\n Enter No. of Students You Want? : ";
        cin>>C;
        for(i=0; i<C; i++)
      {          S.accept_data();
                S.display_data();
                S.calculate();
        } return 0;
}

